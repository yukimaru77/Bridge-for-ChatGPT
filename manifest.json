{
  "manifest_version": 3,
  "name": "Bridge for ChatGPT â€” Translate & Prompt",
  "version": "0.2.0",
  "author": "yukimaru77",
  "homepage_url": "https://github.com/yukimaru77",
  "description": "Translate ChatGPT messages and outgoing prompts (Gemini-powered). Inline Translate button, prompt translate toggle, Markdown render with code/KaTeX.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "vendor/highlight.min.js",
        "vendor/katex.min.js",
        "vendor/katex-auto-render.min.js",
        "vendor/markdown-it-katex.js",
        "vendor/markdown-it.min.js",
        "contentScript.js"
      ],
      "css": [
        "vendor/highlight.min.css",
        "vendor/katex.min.css"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "promptHook.js"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ]
}
